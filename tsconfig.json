{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "src",
    "paths": {
      "@app/assets": ["assets"],
      "@app/components": ["components"],
      "@app/constants": ["constants"],
      "@app/hooks": ["hooks"],
      "@app/lib": ["lib"],
      "@app/styles": ["styles"]
    }
  },
  "include": ["./src/**/*"]
}
